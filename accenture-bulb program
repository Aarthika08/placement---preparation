n=int(input())
l=[]
k=1
c=0
for i in  range(n):
    l.append(k)
# print(l)
for j in range(n):
    if j%2==0:
        l[j]=l[j]+1
    if j%3==0:
        l[j]=l[j]+1
for k in l:
    if k%3==0:
        c+=1
print(c)        

