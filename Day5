class library:
    def __init__ (self,name):
        self.name=name
        self.author=input()
        self.year=input()
        self.edition='9iu'
    
    def swim(self):
        print('''The available books are 
               1.The life joy
               2.Winter season
               3.Available books
               ''')

    def lib(self):
        print("The Library is opens from 10.00 a.m TO 5.00 P.M")    

class students(library):
   
    def __init__(self,sname,year,entry,name):
        super().__init__(name)
        self.sname=sname
        self.year=year
        self.entry=entry
    def librarystaff(self):
        self.name1=input()
        self.age=int(input())
        self.designation=input()
        print('staff details were added')    
    def print_Geek(self):
        print(self.sname)
        print(self.year)
        print(self.entry)
        print(self.name)
        print(self.year)
        print(self.edition)   


